<h1>Discounts</h1>

<table class="discounts-table">
    <thead>
        <th>Amount Off</th>
        <th>Quantity Required</th>
        <th>Item Total</th>
    </thead>

    <tbody>
        <% @discounts.each do |discount| %>
            <tr id=<%= "discount-#{discount.id}" %>>
                <td><%= discount.amount_off %></td>
                <td><%= discount.quantity %></td>
                <td><%= discount.item_total %></td>
            </tr>
        <% end %>
    </tbody>
</table>